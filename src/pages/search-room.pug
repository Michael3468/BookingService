extends ../components/layouts/main-header-footer

include ../components/ui-kit/cards/room-card/room-card
include ../components/ui-kit/form-elements/checkbox-buttons/checkbox-buttons
include ../components/ui-kit/form-elements/dropdown/dropdown
include ../components/ui-kit/form-elements/filter-date-dropdown/filter-date-dropdown
include ../components/ui-kit/form-elements/pagination/pagination
include ../components/ui-kit/form-elements/range-slider/range-slider
include ../components/ui-kit/form-elements/rich-checkbox-buttons/rich-checkbox-buttons

block variables
  - title = "FSD Search room";
  - description = "FSD education project | Search room";

block content

  .search-room-container
    .search-room-options-column.js-search-room-options-column
      .search-room-date-dropdown
        +filter-date-dropdown({
          leftCaption: "даты пребывания в отеле",
        })

      +dropdown({
        leftCaption: "гости",
        type: "dropdown-guests",
        selectionText: "Сколько гостей",
        expMenuHidden: "true",
      })

      .search-room-range-slider
        +range-slider({
          leftCaption: "диапазон цены",
          rightCaption: "5 000₽ - 10 000₽",
        })

        p.search-room-range-slider-text Стоимость за сутки пребывания в номере

      .search-room-checkbox-buttons
        +checkbox-buttons(
          "",
          "правила дома",
          "check-box-buttons",
          "check-box-name",
          "false",
          [
            { value: "allow-smoke", label: "Можно курить" },
            { value: "allow-pet", label: "Можно с питомцами", isChecked: "true" },
            {
              value: "allow guests",
              label: "Можно пригласить гостей (до 10 человек)",
              isChecked: "true",
            },
          ]
        )

      .search-room-rich-checkbox-buttons
        +rich-checkbox-buttons(
          "доступность",
          [
            {
              value: "wide-corridor",
              label: "Широкий коридор",
              text: "Ширина коридоров в номере не менее 91 см.",
            },
            {
              value: "assistant-for-the-disabled",
              label: "Помощник для инвалидов",
              text: "На 1 этаже вас встретит специалист и проводит до номера",
            }
          ]
        )

      .search-room-dropdown-options
        +dropdown({
          leftCaption: "удобства номера",
          type: "dropdown-options",
          selectionText: "Удобства",
          expMenuHidden: "true",
        })

      .search-room-checkbox-buttons-expandable
        +checkbox-buttons(
          "дополнителные удобства",
          "",
          "check-box-buttons-1",
          "check-box-name-1",
          "false",
          [
            { value: "breakfast", label: "Завтрак" },
            { value: "table", label: "Письменный стол" },
            { value: "chair", label: "Стул для кормления" },
            { value: "bed", label: "Кроватка" },
            { value: "TV", label: "Телевизор" },
            { value: "shampoo", label: "Шампунь" },
          ]
        )

    .search-room-options-column-button.js-search-room-options-column-button.search-room-options-column-button_rotate

    .search-room-room-cards
      h1.search-room-room-cards__caption Номера, которые мы для вас подобрали

      .search-room-room-cards__grid-layout

      //- pagination
      .search-room-room-cards__pagination
        +pagination()
