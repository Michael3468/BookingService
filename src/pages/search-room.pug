extends ../components/layouts/main

block variables
  - var title = 'FSD Search room';
  - var description = 'FSD education project | Search room';
  - var pageClass = 'search-room';

block content
  .wrapper

    include ../components/ui-kit/headers-and-footers/headers/headers
    +header()

    .container

      .search-room__options-column

        .search-room__options-column__date-dropdown
          include ../components/ui-kit/form-elements/filter-date-dropdown/filter-date-dropdown
          +filter-date-dropdown({leftCaption : 'даты пребывания в отеле'})

        include ../components/ui-kit/form-elements/dropdown-guests/dropdown-guests
        +dropdown-guests({leftCaption:   'гости',
                          idPostfix:     '-1',
                          selectionText: 'Сколько гостей',
                          expMenuStatus: 'visibility-hidden',
                          })

        .search-room__options-column__range-slider
          include ../components/ui-kit/form-elements/range-slider/range-slider
          +range-slider({leftCaption: 'диапазон цены',
                        rightCaption: '5 000₽ - 10 000₽'})
          p.search-room__range-slider_text Стоимость за сутки пребывания в номере

        .search-room__options-column__checkbox-buttons
          include ../components/ui-kit/form-elements/checkbox-buttons/checkbox-buttons
          +checkbox-buttons({leftCaption:  'правила дома',
                              inpId:        'check-box-buttons',
                              showCaption:  'true',
                              inpStatus:    [ ,'checked','checked'],
                              inpName:      'check-box-name',
                              inpValue:     ['allow-smoke', 'allow pet',        'allow guests'],
                              inpText:      ['Можно курить','Можно с питомцами','Можно пригласить гостей (до 10 человек)']})

        .search-room__options-column__rich-checkbox-buttons
          include ../components/ui-kit/form-elements/rich-checkbox-buttons/rich-checkbox-buttons
          +rich-checkbox-buttons({caption:       'доступность',
                                  optionsValue:  ['wide-corridor',
                                                  'assistant-for-the-disabled'],
                                  optionText:    ['Широкий коридор',
                                                  'Помощник для инвалидов'],
                                  optionSubText: ['Ширина коридоров в номере не менее 91 см.',
                                                  'На 1 этаже вас встретит специалист и проводит до номера'],
                                  })

        .search-room__options-column__dropdown-options
          include ../components/ui-kit/form-elements/dropdown-options/dropdown-options
          +dropdown-options({leftCaption:  'удобства номера',
                            idPrefix:      'dropdown-options',
                            idPostfix:     '-1',
                            selectionText: '2 спальни, 2 кровати...',
                            expMenuStatus: 'visibility-hidden',
                            })

        .search-room__options-column__checkbox-buttons_expandable
          include ../components/ui-kit/form-elements/checkbox-buttons/checkbox-buttons
          +checkbox-buttons({caption:         'дополнительные удобства',
                              leftCaption:    'checkbox buttons',
                              inpId:          'check-box-buttons-1',
                              optionsDisplay: 'display-none',
                              inpStatus:      [,,,,,,],
                              inpName:        'check-box-name-1',
                              inpValue:       ['breakfast', 'table', 'chair', 'bed', 'TV', 'shampoo'],
                              inpText:        ['Завтрак','Письменный стол','Стул для кормления','Кроватка','Телевизор','Шампунь']})


      .room-cards_column.container__room-cards_column
        