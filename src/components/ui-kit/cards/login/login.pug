include ../../../ui-kit/form-elements/button/button
include ../../../ui-kit/form-elements/text-field/text-field

mixin login()
  .login
    h1.login__caption Войти

    form.js-login-form(action = '#change-me')
      .login__inputs
        +text-field({
          inpType: 'email',
          inpName: 'email',
          inpPlaceholder: 'Email',
        })

        +text-field({
          inpType: 'password',
          inpName: 'password',
          inpPlaceholder: 'Пароль',
        })

      +button({
        mod: ['with_arrow', 'block'],
        value: 'Войти',
        type: 'submit'
      })

    .login__create-login
      p.login__create-login-text Нет аккаунта на Toxin?
      +button({
        link: './registration.html',
        mod: ['big', 'bordered'],
        value: 'Создать',
      })