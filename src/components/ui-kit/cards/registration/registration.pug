mixin registration(params)
  .registration.cards_border
    h1.registration__caption Регистрация аккаунта

    form(action='#change-me')
      .registration__text-field_position
        include ../../../ui-kit/form-elements/text-field/text-field
        +text-field({ inpType:        'text',
                      inpName:        'firstName',
                      inpMode:        'text',
                      inpPlaceholder: 'Имя',
                      inpId:          'user-name',
                    })

      include ../../../ui-kit/form-elements/text-field/text-field
      +text-field({ inpType:        'text',
                    inpName:        'lastName',
                    inpMode:        'text',
                    inpPlaceholder: 'Фамилия',
                    inpId:          'user-last-name',
                  })

      .registration__radio-buttons_position
        include ../../../ui-kit/form-elements/radio-buttons/radio-buttons
        +radio-buttons({radioButtonName: 'gender',
                        inpName:         ['man',    'woman'],
                        inpText:         ['Мужчина','Женщина'],
                        inpStatus:       ['checked',]})

      include ../../../ui-kit/form-elements/masked-text-field/masked-text-field
      +masked-text-field({leftCaption:    'Дата рождения',
                          inpId:          'masked-date-field',
                          inpName:        'birthDate',
                          inpPlaceholder: 'ДД.ММ.ГГГГ'})

      .registration__text-field_block-position
        +text-field({ leftCaption:    'Данные для входа в сервис',
                      inpType:        'email',
                      inpName:        'email',
                      inpMode:        'email',
                      inpPlaceholder: 'Email',
                      inpId:          'email',
                    })
      .registration__text-field_block-margin-between
        +text-field({ inpType:        'password',
                      inpName:        'password',
                      inpMode:        'password',
                      inpPlaceholder: 'Пароль',
                      inpId:          'password',
                    })

      .registration__toggle_position
        include ../../../ui-kit/form-elements/toggle/toggle
        +toggle({ toggleId:      'toggle-button-1',
                  toggleBtnText: 'Получать спецпредложения',
                  toggleName:    'specialOffers',
                })

      include ../../../ui-kit/form-elements/buttons/buttons
      +button({link: 'change_me', mod: ['with_arrow','block'], value: 'Перейти к оплате', type: 'submit'})

    .registration__enter-button-block_position
      .registration__enter-button-block
        p.registration__enter-button-text Уже есть аккаунт на Toxin
        +button({link: 'sign-in.html', mod: ['bordered'], value: 'Войти'})
