mixin logo(props)
  if (props.position === 'header')
    - classPrefix = 'header__logo'

  if (props.position === 'footer')
    -classPrefix = 'footer__logo'

  div(class=`${classPrefix}`)
    img(
      class=`${classPrefix}-img`,
      src="./assets/img/logo_colored.svg",
      alt="logo",
      loading="lazy",
    )

    if (props.label === 'true')
      img(
        class=`${classPrefix}-name`,
        src="./assets/img/TOXIN.png",
        alt="logo",
        loading="lazy",
      )