include ../../logo/logo.pug
include ../../form-elements/socials/socials.pug
include ../../form-elements/text-field/text-field

mixin footer(params = {})
  -
    const {
      footerType = ''
    } = params

  - copyrightText = 'Copyright © 2018 Toxin отель. Все права защищены.'

  if footerType !== 'mobile'
    footer.footer
      .footer__container
        .footer__grid-layout
          .footer__grid-layout-logo
            +logo({ type: 'footer' })

            p.footer__logo-text
              | Бронирование номеров в лучшем отеле 2019 года по версии
              | ассоциации «Отельные взгляды»

          .footer__grid-layout-col
            h3.footer__caption-h3 Навигация
            ul.footer__nav
              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") О нас

              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Новости

              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Служба поддержки

              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Услуги

          .footer__grid-layout-col
            h3.footer__caption-h3 О нас
            ul.footer__nav
              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") О сервисе

              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Наша команда

              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Вакансии

              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Инвесторы

          .footer__grid-layout-col
            h3.footer__caption-h3 Служба поддержки
            ul.footer__nav
              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Соглашения

              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Сообщества

              li.footer__nav-item
                a.footer__nav-link(href = "change_me" tabindex = "0") Связь с нами

          .footer__grid-layout-form
            h3.footer__caption-h3 Подписка
            .footer__nav
              p.footer__nav-text Получайте специальные предложения и новости сервиса
              form.js-subscription-form(action = '#change-me')
                +text-field({
                  inpType: 'email',
                  inpName: 'email',
                  inpPlaceholder: 'Email',
                  isArrow: 'true',
                })

    .footer__sub-footer
      .footer__sub-footer-container
        .footer__sub-footer-copyright
          p #{copyrightText}

        +socials()

  //- mobile footer
  else
    .footer.footer__mobile
      .footer__container
        .footer__grid-layout
          .footer__grid-layout-logo.footer__grid-layout-logo_mobile
            +logo({ type: 'footer' })

    .footer__sub-footer.footer__sub-footer_mobile
      .footer__sub-footer-container.footer__sub-footer-container_mobile
        .footer__sub-footer-copyright
          p #{copyrightText}

        +socials({ mobile: 'true' })
