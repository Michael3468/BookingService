- copyrightText = "Copyright © 2018 Toxin отель. Все права защищены."

include ../headers/header_logo/header_logo.pug

mixin footer(footerType)
  if footerType != "mobile"
    footer.footer
      .container
        .grid-layout
          .grid-layout__logo
            +header_logo()
            p.footer__logo-p.footer__padding
              | Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
          .grid-layout__col
            h3 Навигация
            ul.footer__nav
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") О нас
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Новости
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Служба поддержки
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Услуги
          .grid-layout__col
            h3 О нас
            ul.footer__nav
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") О сервисе
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Наша команда
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Вакансии
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Инвесторы
          .grid-layout__col
            h3 Служба поддержки
            ul.footer__nav
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Соглашения
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Сообщества
              li.footer__nav-li
                a.footer__nav-link(href="change_me" tabindex="0") Связь с нами
          .grid-layout__form
            h3 Подписка
            .footer__nav
              p.footer__nav-p Получайте специальные предложения и новости сервиса
              form.js-subscription-form(action='#change-me')
                include ../../form-elements/text-field/text-field
                +text-field({inpType:       "email",
                            inpName:        "email",
                            inpPlaceholder: "Email",
                            inpId:          "Subscription",
                            isArrow:        "true"})
    .sub-footer
      .container.sub-footer__content
        .sub-footer__copyright
          p #{copyrightText}

        include ../../form-elements/socials/socials.pug
        +socials({ mobile: 'false' })
  
  //- mobile footer
  else
    .footer.footer__mob
      .container
        .grid-layout
          .grid-layout__logo.grid-layout__logo_mob
            +header_logo()
    .sub-footer.sub-footer__mob
      .container.sub-footer__content.sub-footer__content_mob
        .sub-footer__copyright
          p #{copyrightText}

        include ../../form-elements/socials/socials.pug
        +socials({ mobile: 'true' })
