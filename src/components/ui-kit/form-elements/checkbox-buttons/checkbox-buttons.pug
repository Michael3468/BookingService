mixin checkbox-buttons(caption = "", leftCaption = "", inpId = "", inpName = "", hidden = "false", items = [])

  - visibility = hidden === "true" ? "hidden" : ""
  - rotateClass = hidden === "false" ? "checkbox-buttons__expandable-list__expand-more-rotate" : ""

  if (leftCaption !== "")
    .checkbox-buttons
      h3.checkbox-buttons__caption= leftCaption
  else
    .checkbox-buttons__expandable-list.js-checkbox-buttons__expandable-list(
      tabindex="0"
    )
      .checkbox-buttons__expandable-list__caption
        h3.checkbox-buttons__expandable-list__text= caption
        .checkbox-buttons__expandable-list__expand-more.material-icons(
          class= rotateClass
        ) expand_more

  .checkbox-buttons__block(class= visibility)
    each item, index in items
      .checkbox-buttons__input
        input.custom-checkbox.js-custom-checkbox(
          tabindex="-1"
          type="checkbox",
          checked=item.isChecked,
          id= `inpId${index}`,
          name= inpName,
          value= item.value,
        )
        label.checkbox-buttons__text.js-checkbox-buttons__text(
          tabindex="0"
          for= `inpId${index}`
        ) #{item.label}

