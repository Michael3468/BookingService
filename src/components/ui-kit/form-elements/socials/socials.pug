mixin socials(params)
  - mobile = params.mobile === 'true' ? 'socials_mob' : ''

  .socials(class= mobile)
    a.socials-link(
      href="change_me"
      tabindex="0"
      target="_blank"
      rel="noopener noreferrer"
    )
      i.fab.fa-twitter.gradient-icon

    a.socials-link(
      href="change_me"
      tabindex="0"
      target="_blank"
      rel="noopener noreferrer"
    )
      i.fab.fa-facebook.gradient-icon

    a.socials-link(
      href="change_me"
      tabindex="0"
      target="_blank"
      rel="noopener noreferrer"
    )
      i.fab.fa-instagram.gradient-icon