mixin icon-text-list(params = {})
  -
    const {
      iconName = "insert_emoticon",
      caption = "Комфорт",
      text = "Шумопоглощающие стены",
    } = params

  .icon-text-list
    .icon-text-list__icon #{iconName}
    .icon-text-list__content
      h3.icon-text-list__caption= caption
      p.icon-text-list__text= text


