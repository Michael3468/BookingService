mixin icon-text-list(params = {})
  -
    const {
      items = [
        {
          iconName: "insert_emoticon",
          caption: "Комфорт",
          text: "Шумопоглощающие стены",
        },
        {
          iconName: "location_city",
          caption: "Удобство",
          text: "Окно в каждой из спален",
        },
        {
          iconName: "whatshot",
          caption: "Уют",
          text: "Номер оснащен камином",
        }
      ]
    } = params

  ul.icon-text-list
    each item in items
        li.icon-text-list__li
          .icon-text-list__icon #{item.iconName}
          .icon-text-list__content
            h3.icon-text-list__caption= item.caption
            p.icon-text-list__text= item.text
