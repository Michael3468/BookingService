include ../like-button/like-button

mixin comments(params)
  .comments
    .comments__user
      img.comments__user-photo(
        src=`./assets/img/${params.imageName}`,
        alt="alt text",
        loading="lazy",
      )

      .comments__user-info
        .comments__user-name= params.userName
        .comments__comment-date= params.commentDate

    .comments__feedback
      .comments__feedback-like
        +like-button({
          likeBtnChecked: params.likeBtnChecked,
          likeBtnText: params.likeBtnText,
        })
      .comments__feedback-text= params.feedbackText


