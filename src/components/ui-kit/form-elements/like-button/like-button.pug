mixin like-button(params)
  if (params.likeBtnStatus== "checked")
    .like-button__container.js-like-button-container(class="js-container-"+params.likeBtnStatus+"-status")
      .like-button
        label(class="js-icon-"+params.likeBtnStatus+"-status").material-icons.like-button-icon.js-like-button-icon
          input.like-button__input(type="checkbox" class="js-input-"+params.likeBtnStatus+"-status" checked=params.likeBtnStatus)
        .like-button__content.js-like-button-content(class="js-content-"+params.likeBtnStatus+"-status")= params.likeBtnText
  else
    .like-button__container.js-like-button-container
      .like-button
        label.material-icons.like-button-icon.js-like-button-icon
          input.like-button__input(type="checkbox")
        .like-button__content.js-like-button-content= params.likeBtnText
