mixin toggle(params = {})
  -
    const {
      leftCaption = '',
      toggleBtnText = 'Получать спецпредложения',
      isChecked = '',
      toggleName = 'specialOffers',
      toggleId = 'toggle',
    } = params

  .toggle
    if (leftCaption)
      h3.toggle__caption= leftCaption
    .toggle-body
      if (isChecked === 'true')
        input.toggle-button.js-toggle__button(
          id = toggleId,
          type = "checkbox"
          checked = isChecked
          name = toggleName
        )
      else
        input.toggle-button.js-toggle__button(
          id = toggleId,
          type = "checkbox"
          name = toggleName
        )

      label.toggle-text(for = toggleId) #{toggleBtnText}
