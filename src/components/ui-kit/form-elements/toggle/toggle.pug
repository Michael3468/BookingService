mixin toggle(params)
  if (params.leftCaption)
    h3.toggle__caption= params.leftCaption
  .toggle
    input.toggle__button(type='checkbox' id=params.toggleId checked=params.toggleStatus name=params.toggleName)
    label.toggle__text(for=params.toggleId) #{params.toggleBtnText}


