mixin dropdown-date(params)
  .dropdown-date

    .dropdown-date__block
      .dropdown-date__caption
        h3= params.startDateCaption
      .dropdown-date__input-block(id=params.startInpId).input__style
        p.dropdown-date__text= (params.startDefaultDate || "ДД.ММ.ГГГГ")
        span.dropdown-date__expand-button.material-icons expand_more

    .dropdown-date__block
      .dropdown-date__caption
        h3= params.endDateCaption
      .dropdown-date__input-block(id=params.endInpId).input__style
        p.dropdown-date__text= (params.endDefaultDate || "ДД.ММ.ГГГГ")
        span.dropdown-date__expand-button.material-icons expand_more

