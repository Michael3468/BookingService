mixin comments-block(params)
  .comments-block
    .comments-block__user
      img.comments-block__user-photo(src="/assets/img/"+params.imageName, alt="alt text")
      
      .comments-block__user-info
        .comments-block__user-name= params.userName
        .comments-block__comment-date= params.commentDate

    .comments-block__feedback
      .comments-block__feedback-like
        //- include добавлен в form-elements.pug
        +like-button({likeBtnId:     'likeBtnId-3',
                      likeBtnStatus: 'checked',
                      likeBtnText:   '12'})
      .comments-block__feedback-text= params.feedbackText