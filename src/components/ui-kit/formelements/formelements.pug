mixin textfield(params)
  .textfield__default
    .element__caption
      h3.element__caption-left= params.leftCaption
      h3.element__caption-right= params.rightCaption
    input.textfield__input(class=params.hoverStyle)(type= params.inpType name=params.inpName inputmode=params.inpMode placeholder=params.inpPlaceholder id=params.inpId)

