include ../../buttons/buttons.pug
include  header_logo/header_logo.pug

mixin header(loginStatus)
  .header.hf-bg-color
    .container.header__container
      .burger__logo
        +header_logo()
        //- label for #menu-checkbox input
        label.material-icons.burger(for='menu-checkbox', onclick='') menu

      //- navigation menu
      //- hiden checkbox for burger label
      input#menu-checkbox(type='checkbox')
      nav.header__nav(role='navigation')
        ul.header__nav-ul.expand-menu
          li.header__nav-li.header__nav-li-active 
            a.header__nav-link(href='change-me-link') О нас
          //- css dropdown
          li.header__nav-li.header__nav-dropdown.header__nav-link Услуги
              //- used material icons font
              span.material-icons expand_more
              .header__nav-dropdown-content.header__shadow
                a.header__dropdown-link(href="change-me-usluga-1") Услуга 1
                a.header__dropdown-link(href="change-me-usluga-2") Услуга 2
                a.header__dropdown-link(href="change-me-usluga-3") Услуга 3
          //- css dropdown end
          li.header__nav-li
            a.header__nav-link(href='change-me-link') Вакансии
          li.header__nav-li
            a.header__nav-link(href='change-me-link') Новости

          //- css dropdown
          li.header__nav-li.header__nav-dropdown.header__nav-link Соглашения
              //- used material icons font
              span.material-icons expand_more
              .header__nav-dropdown-content.header__shadow
                a.header__dropdown-link(href="change-me-soglashenie-1") Соглашение 1
                a.header__dropdown-link(href="change-me-soglashenie-2") Соглашение 2
                a.header__dropdown-link(href="change-me-soglashenie-3") Соглашение 3
          //- css dropdown end

        //- authorisation block
        .expand-menu.header__shadow
          if loginStatus == 'authorised'
            .header__authorized
              - var userName = 'Юлий Цезарь'
              li.header__nav-li #{userName}
          else
            .header__notAuthorized
              .header__auth-buttons-padding
                +button({link:"#", value:"Войти", mod: ["bordered","small"]})
              .header__auth-buttons-padding
                +button({link:"#", value:"Зарегистрироваться", mod: ["small"]})
        //- authorisation block end
      //- navigation menu end
